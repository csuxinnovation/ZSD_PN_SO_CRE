<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
		id="myDialog"
		noDataText="Sem dados de resultado de pesquisa"
		title="Selecionar Size"
		search=".searchValueHelpMaterialSearch3"
		confirm=".confirmValueHelpMaterialSearch3"
		cancel=".handleClose"
		items= "{MaterialSearch3>/}"
		contentHeight="50%"
		contentWidth="20%"
        >
		<columns>
			<Column width="50%" visible="false">
				<header>
					<Text text="{i18n>Prodh}" />
				</header>
			</Column>
			<Column width="50%">
				<header>
					<Text text="Sizes" />
				</header>
			</Column>
		</columns>
		<items>
			<ColumnListItem
				type="Navigation"
				press=".onPress">
				<cells>
					<Text text="{MaterialSearch3>Prodh}"/>
					<Text text="{MaterialSearch3>Text}"/>
				</cells>
			</ColumnListItem>
		</items>
	</TableSelectDialog>
</core:FragmentDefinition>